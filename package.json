    "gulp": "npm run css"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/edinum/nova"
  },
  "license": "GPL-3.0",
  "private": true,
  "devDependencies": {
    "less": "^2.7.3",
    "less-plugin-autoprefix": "^1.5.1"
  },
  "optionalDependencies": {
    "onchange": "^6.0.0"
  },
  "browserslist": [
    "defaults"
  ]
}
